@model ProblemSetTwoViewModel
@{
    ViewData["Title"] = "Problem Set Two";
}

<h1>@ViewData["Title"]</h1>

<hr/>

<form method="post" asp-action="ProblemSetTwo">
    <div class="form-row">
        <div class="col">
            <input type="text" class="form-control" asp-for="Num1" placeholder="Num1">
        </div>
        <div class="col">
            <input type="text" class="form-control" asp-for="Num2" placeholder="Num2">
        </div>
        <div class="col">
            <button class="btn btn-primary" value="submit">Submit</button>
        </div>
    </div>
</form>

<h3>Value = @Model.Sum</h3>